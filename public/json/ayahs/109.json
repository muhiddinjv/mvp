{
  "id": 109,
  "ar": "الكافرون",
  "tr": "Al-Kafirun",
  "en": "The Disbelievers",
  "type": "meccan",
  "total_verses": 6,
  "verses": [
    {
      "id": 1,
      "ar": "قُلۡ يَـٰٓأَيُّهَا ٱلۡكَٰفِرُونَ",
      "en": "Say, \"O disbelievers"
    },
    {
      "id": 2,
      "ar": "لَآ أَعۡبُدُ مَا تَعۡبُدُونَ",
      "en": "I do not worship what you worship"
    },
    {
      "id": 3,
      "ar": "وَلَآ أَنتُمۡ عَٰبِدُونَ مَآ أَعۡبُدُ",
      "en": "Nor are you worshippers of what I worship"
    },
    {
      "id": 4,
      "ar": "وَلَآ أَنَا۠ عَابِدٞ مَّا عَبَدتُّمۡ",
      "en": "Nor will I be a worshipper of what you worship"
    },
    {
      "id": 5,
      "ar": "وَلَآ أَنتُمۡ عَٰبِدُونَ مَآ أَعۡبُدُ",
      "en": "Nor will you be worshippers of what I worship"
    },
    {
      "id": 6,
      "ar": "لَكُمۡ دِينُكُمۡ وَلِيَ دِينِ",
      "en": "For you is your religion, and for me is my religion"
    }
  ]
}